@page
@model EShop.Web.Pages.ProductDetails
@{
  ViewData["Title"] = "ProductDetails";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5 py-4 px-xl-5">
  <nav aria-label="breadcrumb" class="bg-custom-light rounded mb-4">
    <ol class="breadcrumb p-3">
      <li class="breadcrumb-item">
        <a class="text-decoration-none link-secondary" href="/products">
          All Prodcuts
        </a>
      </li>
      <li class="breadcrumb-item">
        <a class="text-decoration-none link-secondary" href="#">
          @Model.Product.Category <!-- Get category by product id-->
        </a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        @Model.Product.Name
      </li>
    </ol>
  </nav>
  <div class="row mb-4">
    <div class="d-none d-lg-block col-lg-1">
      <div class="image-vertical-scroller">
        <div class="d-flex flex-column">
          <!-- Assuming you have ten images to display -->
          <a href="#">
            <img class="rounded mb-2 ratio" alt="" src="@Model.Product.ImageFile">
          </a>
          <!-- Repeat for other images -->
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="row">
        <div class="col-12 mb-4">
          <img class="border rounded ratio ratio-1x1" alt="" src="@Model.Product.ImageFile">
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="d-flex flex-column h-100">
        <h2 class="mb-1">@Model.Product.Name</h2>
        <h4 class="text-muted mb-4">@Model.Product.Price EUR</h4>

        <div class="row g-3 mb-4">
          <div class="col">
            <form asp-page-handler="AddToCart" name="addToCartForm" id="add_cart_form" method="post">

              <input type="hidden" name="ProductId" value="@Model.Product.Id" />
              <button type="submit" class="btn btn-outline-dark py-2 w-100" style="width: 100%;">Add to cart</button>
            </form>
          </div>
          <div class="col">
            <button class="btn btn-dark py-2 w-100">Buy now</button>
          </div>
        </div>
        <h4 class="mb-0">Details</h4>
        <hr />  
        <dl class="row">
          <!-- Assuming you have various product details to display -->
          <dt class="col-sm-4">Code</dt>
          <dd class="col-sm-8 mb-3">C0001</dd>
          <!-- Repeat for other details -->
        </dl>
        <h4 class="mb-0">Description</h4>
        <hr />
        <p class="lead flex-shrink-0">
          <small>
            @Model.Product.Description
          </small>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 mb-4">
      <hr />
      <h4 class="text-muted my-4">Related products</h4>
      <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3">
        <!-- Assuming you have related products to display -->
        <!-- Use HTML to display related products -->
      </div>
    </div>
  </div>
</div>